<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <%
  var title = page.title;

  if (is_archive()){
    title = 'Archives';

    if (is_month()){
      title += ': ' + page.year + '/' + page.month;
    } else if (is_year()){
      title += ': ' + page.year;
    }
  } else if (is_category()){
    title = 'Category: ' + page.category;
  } else if (is_tag()){
    title = 'Tag: ' + page.tag;
  }
  %>
  <title><% if (title){ %><%= title %> - <% } %><%= config.title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <meta name="google-site-verification" content="BxWqqPVkmU3CTQmmIjCp27ZjmcXuB_YTf8Xa7lp_G-w" />
  <%- open_graph({twitter_id: theme.twitter, google_plus: theme.google_plus, fb_admins: theme.fb_admins, fb_app_id: theme.fb_app_id}) %>
  <% if (theme.rss){ %>
    <link rel="alternative" href="<%- theme.rss %>" title="<%= config.title %>" type="application/atom+xml">
  <% } %>
  <% if (theme.favicon){ %>
    <!--link rel="icon" href="<%- theme.favicon %>"-->
    <link href="<%- config.root %>favicon.ico" rel="icon" type="image/x-ico">
  <% } %>
  <!--link href="<%- url_for('/webfonts/ptserif/main.css') %>" rel='stylesheet' type='text/css'>
  <link href="<%- url_for('/webfonts/source-code-pro/main.css') %>" rel="stylesheet" type="text/css"-->
  <link href="<%- config.root %>webfonts/ptserif/main.css" rel='stylesheet' type='text/css'>
  <link href="<%- config.root %>webfonts/source-code-pro/main.css" rel="stylesheet" type="text/css">
  <%- css('css/style') %>
  <%- partial('google-analytics') %>
  <%- partial('baidu_tongji') %>
</head>